<%- include("partials/header"); -%>

    <div class="">
    <h1>Home</h1>
    <p> <%=Content%> </p>
    </div>

    <% posts.forEach(function(post){ %>
      <div class="">
        <h1><%=post.title %></h1>
        <% if (post.content.length > 100) {%>
          <p> <%=post.content.substring(0, 97) + "..."; %> <a href="/posts/<%=post.title%>">Read More</a></p>
        <% }else{%>
          <p> <%=post.content %> </p>
        <% }%>

      </div>
    <% }); %>

<%- include("partials/footer"); -%>
